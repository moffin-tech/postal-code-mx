{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2019",
    "module": "CommonJS",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "removeComments": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules/"
  ]
}
